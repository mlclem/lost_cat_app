<h1>Lost Cats Noticeboard</h1>

<div>
  <% if all_cats.empty? %>
    There are no lost cats. Good job!
  <% else %>
    <% all_cats.each_with_index do |cat, index|%>
      <article>
        <h2><%= cat.name %></h2>
        <h4><%= cat.phone %></h2>
        <p><%= cat.description %></p>
          
          <!-- Edit cat button -->
        <div>
          <form action="/lostcats/<%= index %>/edit">
            <input type="submit" id="update <%= index %>" value="Edit cat details">
          </form>
        </div>

        <!-- Delete / UPDATE button -->
        <div>
          <form action="/lostcats/<%= index %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" id="delete <%= index %>" value="Mark cat as found">
          </form>
        </div>
      </article>
    <% end %>
  <% end %>
</div>

<!-- Add cat button -->
<div>
  <form action="/lostcats/new">
    <input type="submit" id="add cat" value="Add a cat">
  </form>
</div>